<% layout("/layouts/boilerplate") %>
<div class="row mt-5">
    <div class="col-8 offset-3">

    <h3><%= listing.title %></h3>
    </div>
    <div class="card col-6 offset-3 list-card">
        <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="Listing Image">
  <div class="card-body">
    <p class="card-text"> Owned By :
    <b> <i><%= listing.owner.username %></i></b> </p>
     <p class="card-text">
      <%= listing.description %>
     </p>
     <p class="card-text">
  &#8377 <%= listing.price.toLocaleString("en-IN") %><!--8377 for rupeesymbol or tolocaleString for indian-->
     </p>
     <p class="card-text">
      <%= listing.location %>
     </p>
     <p class="card-text">
      <%= listing.country %>
     </p>
  </div>
    </div>
  <!-- Authorized button if owner of listing START    -->
  <% if(currUser && currUser._id.equals(listing.owner._id)){ %>
<div class="btns">
    <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark col-1 offset-3 add-btn"> Edit</a>

    <form method="post" action="/listings/<%= listing._id %>?_method=Delete">
        <button class="btn btn-dark offset-4 ">Delete</button>
      </form>
    </div>
    <% } %> 
   <!-- Authorized button if owner of listing END    -->
   <% if(currUser){ %>
    <div class="col-8 offset-3 mx-auto">
      <hr>
      <h3 class="text-center">Leave a Review's</h3>
      <form action="/listings/<%= listing.id %>/reviews" method="post" class="mb-3 mt-3 needs-validation" novalidate>
       <!-- star rating start -->
        <!-- <div>
          <label for="rating" class="form-label">Rating</label>
          <input type="range" min="1" max="5" id="review" class="form-range" name="review[rating]">
        </div> -->
        <div class="mb-2 mt-3">
          <label for="rating" class="form-label">Rating</label>
          <fieldset class="starability-slot">
            <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
            <input type="radio" id="first-rate1" name="review[rating]" value="1" />
            <label for="first-rate1" title="Terrible">1 star</label>
            <input type="radio" id="first-rate2" name="review[rating]" value="2" />
            <label for="first-rate2" title="Not good">2 stars</label>
            <input type="radio" id="first-rate3" name="review[rating]" value="3" />
            <label for="first-rate3" title="Average">3 stars</label>
            <input type="radio" id="first-rate4" name="review[rating]" value="4" />
            <label for="first-rate4" title="Very good">4 stars</label>
            <input type="radio" id="first-rate5" name="review[rating]" value="5" />
            <label for="first-rate5" title="Amazing">5 stars</label>
          </fieldset>
        </div>
       
          <!-- star rating start -->
        <div>
          <label for="comment" class="form-label">Comment</label>
          <textarea name="review[comment]" id="commewnt" class="form-control" cols="20" rows="4" required></textarea>
          <div class="invalid-feedback">Please add some comment</div>
        </div>
        <button class="btn btn-outline-dark mt-3">Submit</button>
      </form>
    </div>
    <% } %>
  
</div>

<hr class="border border-danger border-2 opacity-50 mb-3 mt-3 container">

<h4 class="text-center"><b> All Review </b></h4>  
<div class="row  g-5 mb-3 offset-1 ">
  <% for(review of listing.reviews){ %> 
    <div class="card col-md-3 col-lg-3 mx-4  p-3" >
      <div class="card-body">
        <h5 class="card-title"><i class="fa-solid fa-user"></i> <%= review.author.username %></h5>
        <p class="starability-result card-text" data-rating="<%= review.rating %>"> </p>
        <p class="card-text"><%= review.comment %></p>
        <!-- <p class="card-text"><%= review.rating %> Star</p>   -->
      </div>
      <form method="post" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
        <button class="btn btn-danger mt-2">DELETE</button>
      </form>
    </div>
 <% } %> 
</div>
   
